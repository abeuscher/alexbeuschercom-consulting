<footer class="site-footer">
    <div class="footer-content">
        <div class="footer-legal">
            {{ sitedata.footer.legal }}
        </div>
        <nav class="footer-nav">
            {% for item in sitedata.footer.nav %}
                <a href="{{ item.url }}" class="{{ item.class }}" title="{{ item.text }}">
                    <span class="sr-only">{{ item.text }}</span>
                </a>
                &nbsp;
            {% endfor %}
        </nav>
    </div>
</footer>