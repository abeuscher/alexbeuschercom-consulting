                <h2>Video Samples</h2>
                <div class="video-collection">
                    {% for clip in sitedata.multimedia.video %}
                        {{ videoEmbed(clip) }}
                    {% endfor %}
                </div>
            </section>
            <section id="contact">
                <h1>Contact</h1>
