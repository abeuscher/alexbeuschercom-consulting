{% macro audioCollection(clip) %}
    <div class="audio-item">
        <div class="audio-item__header">
            <h3 class="audio-item__title">{{ clip.title }}</h3>
            <p class="audio-item__description">{{ clip.description }}</p>
        </div>
        <div class="audio-player">
            <audio>
                <source src="{{ clip.src }}" type="{{ clip.type }}">
                Your browser does not support the audio element.
            </audio>
        </div>
    </div>
{% endmacro %}